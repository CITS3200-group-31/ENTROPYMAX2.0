#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
    if (argc != 2) {
        fprintf(stderr, "Usage: %s <csv_file_path>\n", argv[0]);
        return 1;
    }

    char command[512];
    snprintf(command, sizeof(command), "python3 run_converter.py \"%s\"", argv[1]);

    int ret = system(command);
    if (ret != 0) {
        fprintf(stderr, "Python script failed with exit code %d\n", ret);
        return ret;
    }

    printf("Conversion successful.\n");
    return 0;
}